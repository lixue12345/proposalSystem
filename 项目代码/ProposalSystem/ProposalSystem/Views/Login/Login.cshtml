@model ProposalSystem.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<title>登录</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
  	<style>
  	body{
        background-image:url("Images/body_bg.jpg");
        background-position: center 0;  
        background-repeat: no-repeat;  
        background-attachment: fixed;  
        background-size: cover;  
  	}

  		.mycenter{
    margin-top: 80px;
    margin-left: auto;
    margin-right: auto;
    height: 350px;
    width:500px;
    padding: 3%;
    padding-left: 5%;
    padding-right: 5%;
    background:url("Images/login_bg.png");
    border-radius:15px
}
.mycenter mysign{
    width: 440px;
}
.mycenter input,button{
    margin-top:2%;
    margin-left: 10%;
    margin-right: 10%;
}

  	</style>
</head>
<body>
    @using(Html.BeginForm())
{
    @Html.ValidationSummary(true)
   
        <h1 class="text-center text-primary">教师提案与意见处理系统</h1>
	
        <div class="mycenter">
            <div class="mysign">
                <div class="col-lg-11 text-center text-info">
                    <div>
                        <img src="~/Images/logo.png" />
                    </div>
                </div>
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.Account, new { @class = "form-control", placeholder = "请输入账号", id = "account" })
                    @Html.ValidationMessageFor(m => m.Account)
                </div>

                <div class="col-lg-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "请输入密码", id = "pwd" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="col-lg-10"></div>
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-success col-lg-12">登录</button>
                </div>
            </div>
        </div>
}

  </body>
</html>